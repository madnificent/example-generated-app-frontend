<span>
  {{#if model}}
    {{#if (is-pending model)}}
      <div class="loading">
        <i class="fa fa-spinner fa-spin"></i>
        <p>loading...</p>
      </div>
    {{else}}
      {{#link-to itemRoute (await model)}}{{get (await model) configuredLabel}}{{/link-to}}
    {{/if}}
  {{/if}}
</span>
