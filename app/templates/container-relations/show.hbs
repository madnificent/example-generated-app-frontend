{{!-- Page to show details of container-relations --}}
<div class="details">
  <h2 class="title">{{t (humanize 'container-relation details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit container-relation
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "container-relations" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "container-relations.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of container-relation. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'index'}}</td>
        {{handle-attribute model=model attribute='index' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'group'}}</td>
       {{display-model-belongsto-relationship model=model.group itemRoute='container-groups.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'item'}}</td>
       {{display-model-belongsto-relationship model=model.item itemRoute='container-items.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>

    </tbody>
  </table>
</div>
