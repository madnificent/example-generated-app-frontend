{{!-- Page to list pipelines --}}
<div class="content">
  <h2 class="title">{{t (humanize 'container-groups')}}</h2>
  <div class="actions">{{#link-to "container-groups.new" class="btn new" title=(t "Create new item") tagName="button" }}{{t 'Create'}}{{/link-to}}</div>
  {{#data-table
     content=model
     isLoading=isLoadingModel
     filter=filter
     sort=sort
     page=page
     size=size
     as |t|}}
    {{#t.content as |c|}}
      {{#c.header}}
        {{!-- th-sortable field='title' currentSorting=sort label=(t 'title') --}}
        <th>title</th>
        
        <th>{{!-- contains detail view action --}}</th>
        <th>{{!-- contains detail edit action --}}</th>
      {{/c.header}}
      {{#c.body as |row|}}
        <td>{{row.title}}</td>
        
        <td>{{link-to (t 'Open') 'container-groups.show' row}}</td>
        <td>{{link-to (t 'Edit') 'container-groups.edit' row}}</td>
      {{/c.body}}
    {{/t.content}}
  {{/data-table}}
</div>
