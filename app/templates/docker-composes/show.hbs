{{!-- Page to show details of docker-composes --}}
<div class="details">
  <h2 class="title">{{t (humanize 'docker-compose details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit docker-compose
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "docker-composes" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "docker-composes.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of docker-compose. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'text'}}</td>
        {{handle-attribute model=model attribute='text' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'title'}}</td>
        {{handle-attribute model=model attribute='title' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'relatedWorkflows'}}</td>
       {{display-model-belongsto-relationship model=model.relatedWorkflows itemRoute='pipelines.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'relatedStacks'}}</td>
       {{display-model-hasmany-relationship   model=model.relatedStacks itemRoute='stacks.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
    </tbody>
  </table>
</div>
