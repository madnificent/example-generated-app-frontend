{{!-- Page to edit stack --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit stack')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete stack.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new stack" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of stack. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>title</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='title' editable=true}}</td>
</tr>
      <tr>
      <td>location</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='location' editable=true}}</td>
</tr>
      <tr>
      <td>icon</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='icon' editable=true}}</td>
</tr>

        <tr><td>dockerFile</td><td align='middle'>{{edit-belongs-to relName=changeset.dockerFile relType="docker-compose"}}</td></tr>
        <tr><td>pipelineInstances</td><td align='middle'>{{edit-has-many relName=changeset.pipelineInstances relType="pipeline-instance"}}</td></tr>

    </tbody>
  </table>
</div>
{{/with}}
