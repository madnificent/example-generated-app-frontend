{{!-- Page to create a new container-item --}}
<div class="new">
  <h2 class="title">{{t (humanize 'New container-item')}}</h2>

  {{!--
    Actions to save new container-item
    or delete new container-item.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new container-item" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
  </div>

  {{!-- Table to show details of container-item. --}}
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>title</td>
<td align='middle'>{{handle-attribute model=model attribute='title' editable=true}}</td>
      </tr>
      <tr>
        <td>repository</td>
<td align='middle'>{{handle-attribute model=model attribute='repository' editable=true}}</td>
      </tr>
      <tr>
        <td>dockerText</td>
<td align='middle'>{{handle-attribute model=model attribute='dockerText' editable=true}}</td>
      </tr>
      
      <tr><td>relations</td><td align='middle'>{{edit-has-many relName=model.relations relType="container-relation"}}</td></tr>
    </tbody>
  </table>
</div>
