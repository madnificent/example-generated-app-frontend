{{!-- Page to show details of container-items --}}
<div class="details">
  <h2 class="title">{{t (humanize 'container-item details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit container-item
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "container-items" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "container-items.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of container-item. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'title'}}</td>
        {{handle-attribute model=model attribute='title' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'repository'}}</td>
        {{handle-attribute model=model attribute='repository' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'dockerText'}}</td>
        {{handle-attribute model=model attribute='dockerText' tagName='td' classes='properties__data'}}
      </tr>

      <tr>
        <td class="properties__label">{{t 'relations'}}</td>
       {{display-model-hasmany-relationship   model=model.relations itemRoute='container-relations.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>
    </tbody>
  </table>
</div>
