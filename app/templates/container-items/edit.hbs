{{!-- Page to edit container-item --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit container-item')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete container-item.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new container-item" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of container-item. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>title</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='title' editable=true}}</td>
</tr>
      <tr>
      <td>repository</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='repository' editable=true}}</td>
</tr>
      <tr>
      <td>dockerText</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='dockerText' editable=true}}</td>
</tr>

        
        <tr><td>relations</td><td align='middle'>{{edit-has-many relName=changeset.relations relType="container-relation"}}</td></tr>

    </tbody>
  </table>
</div>
{{/with}}
