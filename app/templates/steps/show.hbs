{{!-- Page to show details of steps --}}
<div class="details">
  <h2 class="title">{{t (humanize 'step details')}}</h2>

  {{!--
    Actions to go back to the list-view or edit step
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "steps" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#link-to "steps.edit" model class="btn edit" title="Edit this item" tagName="button"}}Edit{{/link-to}}
  </div>

  {{!-- Table to show details of step. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'title'}}</td>
        {{handle-attribute model=model attribute='title' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'description'}}</td>
        {{handle-attribute model=model attribute='description' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'code'}}</td>
        {{handle-attribute model=model attribute='code' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'order'}}</td>
        {{handle-attribute model=model attribute='order' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td>{{t 'status'}}</td>
        {{handle-attribute model=model attribute='status' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'pipeline'}}</td>
       {{display-model-belongsto-relationship model=model.pipeline itemRoute='pipelines.show' configuredLabel='stringRep' tagName="td" classes="properties__data"}}
      </tr>

    </tbody>
  </table>
</div>
