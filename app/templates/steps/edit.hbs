{{!-- Page to edit step --}}
{{#with (changeset model skipValidate=true) as |changeset|}}
<div class="edit">
  <h2 class="title">{{t (humanize 'Edit step')}}</h2>

  {{!--
    Actions to save or cancel changes;
    or delete step.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new step" {{action 'save' changeset model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' changeset model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' changeset model}}>Delete</button>
  </div>

  {{!-- Table to show details of step. --}}
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
      <td>title</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='title' editable=true}}</td>
</tr>
      <tr>
      <td>description</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='description' editable=true}}</td>
</tr>
      <tr>
      <td>code</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='code' editable=true}}</td>
</tr>
      <tr>
      <td>order</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='order' editable=true}}</td>
</tr>
      <tr>
      <td>status</td>
      <td align='middle'>{{handle-attribute model=changeset attribute='status' editable=true}}</td>
</tr>

        <tr><td>pipeline</td><td align='middle'>{{edit-belongs-to relName=changeset.pipeline relType="pipeline"}}</td></tr>
        

    </tbody>
  </table>
</div>
{{/with}}
